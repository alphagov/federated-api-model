{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://github.com/alphagov/federated-api-model/blob/main/schemas/v1alpha/error-response.json",
  "title": "Data Standards Authority error response objects",
  "description": "A JSON Schema to manage the format of error response objects",
  "type": "object",
  "required": [
    "error",
    "error-description"
  ],
  "properties": {
    "error": {
      "$comment": "The error code",
      "type": "string",
      "enum": [
        "invalid_request"
      ]
    },
    "error-description": {
      "$comment": "A human readable description of the error",
      "type": "string"
    }
  },
  "additionalProperties": false
}
